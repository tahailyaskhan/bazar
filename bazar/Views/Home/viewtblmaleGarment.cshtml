    $("#categoryid").change(function () {

        //ShowProgress();

        categoryid = ($(this).val());
        if (categoryid == 0) {
            $("#shirtsizechartid").prop("disabled", true);
            $("#pantsizechartid").prop("disabled", true);



        }
        if(categoryid == 1)
        {
            $("#shirtsizechartid").prop("disabled", false);
            $("#pantsizechartid").prop("disabled", true);
